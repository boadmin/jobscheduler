{
  "name": "jobscheduler",
  "components": {
    "appserver": {
      "image": "registry.giantswarm.io/$GIANTSWARM_LOGIN_NAME/jobscheduler:latest",
      "ports": [4444, 40444],
      "domains": {
        "4444": "jobscheduler-$GIANTSWARM_LOGIN_NAME.gigantic.io",
        "40444": "agent.jobscheduler-$GIANTSWARM_LOGIN_NAME.gigantic.io"
      },
      "volumes": [
        {
          "path": "/opt/jobscheduler/data/scheduler/config/live",
          "size": "2 GB"
        }
      ],
      "links": [
        {
          "component": "mysql",
          "target_port": 3306
        }
      ]
    },
    "mysql": {
      "image": "mariadb:latest",
      "env": {
        "MYSQL_USER": "jobscheduler",
        "MYSQL_PASSWORD": "jobscheduler",
        "MYSQL_ROOT_PASSWORD": "scheduler",
        "MYSQL_DATABASE": "jobscheduler"
       },
      "ports": ["3306/tcp"]
    }
  }
}
